<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SingUp Suite">
    <test name="SignUp Test Classes" >
        <classes>
            <class name="Framework.testCases.SignupTest">
                <methods>
                    <include name="TC001_ValidUserRegistration"/>
                    <include name="TC002_DuplicateUserRegistration"/>
                    <include name="TC003_RegistrationWithEmptyRequiredFields"/>
                    <include name="TC004_RegisterWithInvalidEmail"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>



